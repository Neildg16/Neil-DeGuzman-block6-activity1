<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foodProductListItem"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginTop="10dp"
    android:gravity="center">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="165dp"
        android:layout_height="130dp"
        android:layout_marginTop="-55dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvFoodProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="48dp"
                android:text="Borger ni Adele"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvFoodDescription"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:maxLines="3"
                android:text="@string/lorem_ipsum"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tvFoodProductName"
                app:layout_constraintTop_toBottomOf="@+id/tvFoodProductName" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="165dp"
        android:layout_height="130dp"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/buko_juice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

